<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="company_form_inherit" model="ir.ui.view">
            <field name="name">res.company</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='city']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <xpath expr="//field[@name='state_id']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <xpath expr="//field[@name='zip']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <xpath expr="//field[@name='country_id']" position="after">
                    <field name="state_id" placeholder="Departamento" domain="[('country_id','=',country_id)]" options="{'no_open':True}"/>
                    <div class="address_format">
                        <field name="province_id" placeholder="Provincia" style="width: 49%%" options='{"no_open": True}' domain="[('state_id','=',state_id)]"/>
                        <field name="district_id" domain="[('province_id','=',province_id)]" on_change="onchange_district(district_id)" placeholder='Distrito' options='{"no_open": True}' style="width: 49.53%%"/>
                    </div>
                    <field name="zip"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>

<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    <!-- Add field province_id, district_id to res.company-->
    <record model="ir.ui.view" id="view_partner_form_toponyms">
        <field name="name">res.partner.form.toponyms</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='o_address_format']" position="replace">
                <div class="o_address_format">
                    <div class="oe_edit_only">
                        <button name="open_parent" type="object" string="(edit)" class="oe_link" attrs="{'invisible': ['|', ('parent_id', '=', False), ('type', '!=', 'contact')]}"/>
                    </div>
                    <field name="street" placeholder="Street..." class="o_address_street" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                    <field name="street2" placeholder="Street 2..." class="o_address_street" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                    <field name="country_id" placeholder='PaÃ­s' class="o_address_street" options='{"no_open": True}'/>
                    <field name="state_id" class="o_address_street" placeholder="State" domain="[('country_id','=',country_id)]" options="{&quot;no_open&quot;: True}" context="{'country_id': country_id, 'zip': zip}"/>
                    <field name="province_id" placeholder="Provincia" style="width: 50%" options="{&quot;no_open&quot;: True}" domain="      [('state_id','=',state_id)]"/>
                    <field on_change="onchange_district(district_id)" name="district_id" domain="[('province_id','=',province_id)]" placeholder='Distrito' options="{&quot;no_open&quot;: True}" style="width: 50%"/>
                    <field name="zip" placeholder='Cod. Postal' class="o_address_street"/>
                </div>
            </xpath>
        </field>
    </record>
</data>
</openerp>
